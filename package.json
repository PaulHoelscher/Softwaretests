{
    "name":  "erp1",
    "version":  "1.0.0",
    "description":  "Weather dashboard with tests",
    "main":  "src/server/index.ts",
    "scripts":  {
                    "dev":  "concurrently \"npm:dev:client\" \"npm:dev:server\"",
                    "dev:client":  "vite",
                    "dev:server":  "cross-env NODE_ENV=development tsx src/server/index.ts",
                    "build":  "npm run build:client",
                    "build:client":  "vite build",
                    "start":  "cross-env NODE_ENV=production tsx src/server/index.ts",
                    "lint":  "tsc --noEmit",
                    "test":  "npm run test:unit \u0026\u0026 npm run test:integration",
                    "test:unit":  "vitest run tests/unit",
                    "test:integration":  "vitest run tests/integration",
                    "test:e2e":  "playwright test",
                    "preview":  "vite preview",
                    "start:test":  "cross-env NODE_ENV=production USE_FAKE_WEATHER=true tsx src/server/index.ts"
                },
    "repository":  {
                       "type":  "git",
                       "url":  "git+https://github.com/PaulHoelscher/Softwaretests.git"
                   },
    "keywords":  [

                 ],
    "author":  "",
    "license":  "ISC",
    "bugs":  {
                 "url":  "https://github.com/PaulHoelscher/Softwaretests/issues"
             },
    "homepage":  "https://github.com/PaulHoelscher/Softwaretests#readme",
    "dependencies":  {
                         "axios":  "^1.12.2",
                         "express":  "^5.1.0",
                         "react":  "^19.1.1",
                         "react-dom":  "^19.1.1"
                     },
    "devDependencies":  {
                            "@playwright/test":  "^1.55.1",
                            "@testing-library/jest-dom":  "^6.8.0",
                            "@testing-library/react":  "^16.3.0",
                            "@testing-library/user-event":  "^14.6.1",
                            "@types/express":  "^5.0.3",
                            "@types/node":  "^24.5.2",
                            "@types/react":  "^19.1.13",
                            "@types/react-dom":  "^19.1.9",
                            "@types/supertest":  "^6.0.3",
                            "@vitejs/plugin-react":  "^5.0.3",
                            "concurrently":  "^9.2.1",
                            "cross-env":  "^10.0.0",
                            "jsdom":  "^27.0.0",
                            "supertest":  "^7.1.4",
                            "ts-node":  "^10.9.2",
                            "tsx":  "^4.20.5",
                            "typescript":  "^5.9.2",
                            "vite":  "^7.1.7",
                            "vitest":  "^3.2.4"
                        },
    "type":  "module"
}
